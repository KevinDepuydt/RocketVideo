{% extends "AppBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Modifier une vidéo{% endblock %}

{% block body %}

    {# Include menu #}
    {{ include("AppBundle::includes/menu.html.twig") }}

    <h1 class="page-title margin-b-20 margin-t-50">Modifier une vidéo</h1>

    <div class="container">
        {% spaceless %}
            {{ form_start(form, { 'attr': { 'class': 'update-stream-form' }}) }}
            {{ form_errors(form) }}

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_row(form.name) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_row(form.save) }}
            </div>

            {{ form_end(form) }}
        {% endspaceless %}
    </div>
{% endblock %}